<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_summary_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lv_summary"
    android:background="@drawable/card_avatar_bar">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/text_size_normal"
        android:layout_marginLeft="@dimen/text_size_normal"
        android:layout_marginStart="@dimen/text_size_normal"
        android:layout_marginTop="@dimen/text_size_normal"
        android:layout_weight="1"
        android:drawablePadding="@dimen/text_size_normal"
        android:text="@string/task_search" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/text_size_normal"
        android:layout_marginRight="@dimen/text_size_normal"
        android:drawablePadding="@dimen/text_size_normal"
        android:drawableRight="@drawable/ic_global_arrow_right_2px" />
</LinearLayout>
