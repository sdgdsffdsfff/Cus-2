<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_initial" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_modify_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:textSize="@dimen/text_size_normal"
            android:background="@drawable/bg_listview_white"
            android:drawableRight="@drawable/ic_global_arrow_right_2px"
            android:text="修改密码"
            android:clickable="true" />

        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:textSize="@dimen/text_size_normal"
            android:background="@drawable/bg_listview_white"
            android:drawableRight="@drawable/ic_global_arrow_right_2px"
            android:text="新手指导"
            android:clickable="true" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:textSize="@dimen/text_size_normal"
            android:background="@drawable/bg_listview_white"
            android:drawableRight="@drawable/ic_global_arrow_right_2px"
            android:text="通知"
            android:clickable="true" />

        <TextView
            android:id="@+id/tv_switch_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:textSize="@dimen/text_size_normal"
            android:background="@drawable/bg_listview_white"
            android:drawableRight="@drawable/ic_global_arrow_right_2px"
            android:text="切换用户"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:background="@drawable/bg_listview_white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textSize="@dimen/text_size_normal"
                android:background="@color/white"
                android:text="当前版本"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_current_version"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/lightgray"
                android:text="1.0.0.23"/>

         </LinearLayout>

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/blue"
            android:background="@drawable/bg_listview_white"
            android:text="退出当前账号"
            android:clickable="true" />

    </LinearLayout>

</ScrollView>